<body class="login-layout">

<div class="container-fluid" id="main-container">
  <div id="main-content">
    <div class="row-fluid">
      <div class="span12">

        <div class="login-container">

          <div class="row-fluid">
            <div class="center">
              <h1><i class="icon-leaf green"></i> <span class="red">My</span> <span class="white">Application</span></h1>
              <h4 class="blue">&copy; Puneet Gupta</h4>
            </div>
          </div>

          <div class="space-6"></div>

          <div class="row-fluid">

            <div class="position-relative">


              <div id="login-box" class="visible widget-box no-border">

                <div class="widget-body">
                  <div class="widget-main">
                    <h4 class="header lighter bigger"><i class="icon-coffee green"></i> Please Enter Your Information</h4>

                    <div class="space-6"></div>

                    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name))  do |f| %>
                      <fieldset>
                        <label>
						<span class="block input-icon input-icon-right">
							<%= f.text_field :email, :class => "span12", :placeholder => "Email", :required => true %>
							<i class="icon-user"></i>
						</span>
                        </label>
                        <label>
						<span class="block input-icon input-icon-right">
							<%= f.password_field :password, :class => "span12", :placeholder => "Password", :required => true %>
							<i class="icon-lock"></i>
						</span>
                        </label>
                        <div class="space"></div>
                        <div class="row-fluid">
                          <label class="span8">
                            <input type="checkbox"><span class="lbl"> Remember Me</span>
                          </label>
                          <%= button_tag(type: 'submit', class: "span4 btn btn-small btn-primary") do %>
                              <i class='icon-key'></i> Login
                          <% end %>
                        </div>

                      </fieldset>
                    <% end %>
                  </div><!--/widget-main-->


                  <div class="toolbar clearfix">
                    <div>
                      <a href="#" onclick="show_box('forgot-box'); return false;" class="forgot-password-link"><i class="icon-arrow-left"></i> I forgot my password</a>
                    </div>
                    <div>
                      <a href="#" onclick="show_box('app-signup-box'); return false;" class="user-signup-link">I want to register <i class="icon-arrow-right"></i></a>
                    </div>
                  </div>
                </div><!--/widget-body-->

              </div><!--/login-box-->






              <div id="forgot-box" class="widget-box no-border">

                <div class="widget-body">
                  <div class="widget-main">
                    <h4 class="header red lighter bigger"><i class="icon-key"></i> Retrieve Password</h4>

                    <div class="space-6"></div>

                    <p>
                      Enter your email and to receive instructions
                    </p>
                    <form>
                      <fieldset>
                        <label>
						<span class="block input-icon input-icon-right">
							<input type="email" class="span12" placeholder="Email" />
							<i class="icon-envelope"></i>
						</span>
                        </label>

                        <div class="row-fluid">
                          <button onclick="return false;" class="span5 offset7 btn btn-small btn-danger"><i class="icon-lightbulb"></i> Send Me!</button>
                        </div>

                      </fieldset>
                    </form>
                  </div><!--/widget-main-->


                  <div class="toolbar center">
                    <a href="#" onclick="show_box('login-box'); return false;" class="back-to-login-link">Back to login <i class="icon-arrow-right"></i></a>
                  </div>
                </div><!--/widget-body-->

              </div><!--/forgot-box-->


              <div id="app-signup-box" class="widget-box no-border">

                <div class="widget-body">
                  <div class="widget-main">
                    <h4 class="header green lighter bigger"><i class="icon-group blue"></i> Sign Up By:</h4>
                    <div class="space-6"></div>
                    <a  href = "/users/auth/facebook"><img src="https://az29184.vo.msecnd.net/image-container/FB-New.png" class="FB" /></a>
                    Or
                    <a href="#" onclick="show_box('signup-box'); return false;" class="back-to-login-link"><img src="/assets/mail.jpg" height=40 width=40 class="mail" /></a>
                  </div>
                </div>
              </div>

              <div id="signup-box" class="widget-box no-border">

                <div class="widget-body">
                  <div class="widget-main">
                    <h4 class="header green lighter bigger"><i class="icon-group blue"></i> New User Registration</h4>
                    <div class="space-6"></div>

                    <p>
                      Enter your details to begin:
                    </p>

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <fieldset>
                        <label>
						<span class="block input-icon input-icon-right">
							<%= f.text_field :email, autofocus: true, class: "span12", placeholder: "Email" %>
							<i class="icon-envelope"></i>
						</span>
                        </label>
                        <label>
						<span class="block input-icon input-icon-right">
							<%= f.text_field :username, autofocus: true, class: "span12", placeholder: "Username" %>
							<i class="icon-user"></i>
						</span>
                        </label>
                        <label>
						<span class="block input-icon input-icon-right">
							<%= f.password_field :password, autocomplete: "off", class: "span12", placeholder: "Password" %>
							<i class="icon-lock"></i>
						</span>
                        </label>
                        <label>
						<span class="block input-icon input-icon-right">
							<%= f.password_field :password_confirmation, autocomplete: "off", class: "span12", placeholder: "Repeat Password" %>
							<i class="icon-retweet"></i>
						</span>
                        </label>

                        <label>
                          <input type="checkbox"><span class="lbl"> I accept the <a href="#">User Agreement</a></span>
                        </label>

                        <div class="space-24"></div>

                        <div class="row-fluid">
                          <button type="reset" class="span6 btn btn-small"><i class="icon-refresh"></i> Reset</button>
                          <%= button_tag(type: f.submit, :class => "span6 btn btn-small btn-success") do %>
                              Register <i class="icon-arrow-right icon-on-right"></i>
                          <% end %>
                        </div>

                      </fieldset>
                    <% end %>
                  </div>


                  <div class="toolbar center">
                    <a href="#" onclick="show_box('login-box'); return false;" class="back-to-login-link"><i class="icon-arrow-left"></i> Back to login</a>
                  </div>

                </div><!--/widget-body-->

              </div><!--/signup-box-->


            </div><!--/position-relative-->

          </div>


        </div>


      </div><!--/span-->
    </div><!--/row-->
  </div>
</div><!--/.fluid-container-->


<!-- basic scripts -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript">
    window.jQuery || document.write("<script src='assets/js/jquery-1.9.1.min.js'>\x3C/script>");
</script>


